<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(Message.new, html: {class: "form-horizontal"}) do |f| %>

  <div class="form-group" >
  <%= f.label :name, "名前", class:"col-sm-1 control-label" %>
  <div class="col-sm-3">
  <%= f.text_field  :name , size: 40, maxlength: 10, class: "form-control", placeholder: "Name" %>
  </div>

  <%= f.label :body, "内容", class:"col-sm-1 control-label" %>
  <div class="col-sm-7">
  <%= f.text_area :body ,size: 40, maxlength: 200, class: "form-control", placeholder: "text" %>
  </div>
  </div>

  <%= f.submit class: "btn btn-sm btn-primary pull-right" %>

<% end %>

