<%= form_for(Message.new, html: {class: "form-horizontal"}) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
  <div class="form-groupcol-sm-3" >
      <%= f.label :name, "名前", class:"col-sm-1 control-label" %>

      <%= f.text_field  :name , size: 40, maxlength: 10, class: "form-control", placeholder: "Name" %>

  </div>
  <div class="form-group col-sm-2" >
      <%= f.label :age, "年齢", class:"control-label" %>

      <%= f.text_area :age ,size: 40, maxlength: 200, class: "form-control", placeholder: "age" %>

  </div>  
  
  <div class="form-groupcol-sm-7" >
      <%= f.label :body, "内容", class:"control-label" %>

      <%= f.text_area :body ,size: 40, maxlength: 200, class: "form-control", placeholder: "text" %>

  </div>

  <%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>